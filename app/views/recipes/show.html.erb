<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @recipe.title %>
</p>

<p>
  <b>Image:</b>
  <%= @recipe.image %>
</p>

<p>
  <b>Ingredients:</b>
  <% @recipe.ingredients.each do |x| %>
  <li><%= x.name %></li>
  <% end %>
</p>

<p>
  <b>Instructions:</b>
  <%= @recipe.instructions %>
</p>



<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
